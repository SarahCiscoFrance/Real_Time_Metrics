<Extensions>
  <Version>1.7</Version>
  <Panel>
    <Order>1</Order>
    <PanelId>metric</PanelId>
    <Origin>local</Origin>
    <Type>Statusbar</Type>
    <Icon>Lightbulb</Icon>
    <Color>#C2C2C2</Color>
    <Name>RT Metrics</Name>
    <ActivityType>Custom</ActivityType>
    <IconUrl>https://poqcommerce.com/wp-content/uploads/2014/05/Google-Analytics-icon.png</IconUrl>
    <Page>
      <Name>Real-Time Environmental Metrics</Name>
      <Row>
        <Name>Temperature</Name>
        <Widget>
          <WidgetId>temperatureC</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=null;fontSize=normal;align=center</Options>
        </Widget>
        <Widget>
          <WidgetId>temperatureF</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=null;fontSize=normal;align=center</Options>
        </Widget>
        <Widget>
          <WidgetId>temp_status</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=2;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Relative Humidity</Name>
        <Widget>
          <WidgetId>humidity</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=2;fontSize=normal;align=center</Options>
        </Widget>
        <Widget>
          <WidgetId>humid_status</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=2;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <Row>
        <Name>Ambient Noise &amp; Level</Name>
        <Widget>
          <WidgetId>noiseLA</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=null;fontSize=normal;align=center</Options>
        </Widget>
        <Widget>
          <WidgetId>soundLA</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=null;fontSize=normal;align=center</Options>
        </Widget>
        <Widget>
          <WidgetId>noise_status</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=2;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <Row>
        <Name>TVOC ppb &amp; Air Quality</Name>
        <Widget>
          <WidgetId>aqtvoc</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=2;fontSize=normal;align=center</Options>
        </Widget>
        <Widget>
          <WidgetId>aqstatus</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=2;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <Row>
        <Name>People Count</Name>
        <Widget>
          <WidgetId>peopleC</WidgetId>
          <Name/>
          <Type>Text</Type>
          <Options>size=4;fontSize=normal;align=center</Options>
        </Widget>
      </Row>
      <PageId>Metrics</PageId>
      <Options>hideRowNames=0</Options>
    </Page>
  </Panel>
</Extensions>
